# Porta padrão do servidor Express
PORT=5000

# Opção 1) Cole a URI completa fornecida pelo MongoDB Atlas
# MONGO_URI=mongodb+srv://<usuario>:<senha>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# Opção 2) Informe as partes separadas (o backend monta a URI automaticamente)
# MONGO_USER=<usuario_do_mongo>
# MONGO_PASSWORD=<senha_do_mongo>
# MONGO_HOST=cluster0.xxxxxx.mongodb.net
# MONGO_DB=sacri
# MONGO_OPTIONS=retryWrites=true&w=majority&appName=Cluster0

# JWT
JWT_SECRET=altere-para-um-segredo-real

# E-mail (password recovery)
MAIL_FROM=no-reply@sacri.local
MAIL_WEBHOOK_URL=
MAIL_WEBHOOK_TOKEN=

# URL do frontend usada nos e-mails
FRONTEND_URL=http://localhost:5173
